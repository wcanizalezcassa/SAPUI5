<mvc:View controllerName="logali.employees.controller.MainView"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m"
    xmlns:core="sap.ui.core">
    <Page id="page" title="{i18n>title}">
        <content>
         <HBox id="_IDGenHBox1" >
            <Label labelFor="inputEmployee" id="labelEmployee" text="{i18n>labelEmployee}" class="sapUiSmallMargin" />
            <Input id="inputEmployee" value="{jsonCountries>/EmployeeId}" maxLength="10" width="200px" class="sapUiSmallMarginEnd" />
            <Label labelFor="SlCountry" id="labelCountry" text="{i18n>labelCountry}" class="sapUiSmallMargin" visible="true"/>
            <Select id="slCountry" selectedKey="{jsonCountries>/CountryKey}" forceSelection="false" items="{jsonCountries>/ListCountry}" visible="true">
                <items>
                    <core:Item key="{jsonCountries>Key}" text="{jsonCountries>Text}" />
                </items>
            </Select>
            <Button id="btnFilter" text="{i18n>btnFilter}" icon="sap-icon://search" press="onFilter" class="sapUiSmallMarginEnd"/>
            <Button id="btnClearFilter" text="{i18n>btnFilter}" icon="sap-icon://clear-filter" press="onClearFilter" class="sapUiSmallMarginEnd"/>
        </HBox>
        <core:Fragment fragmentName="logali.employees.fragment.TableEmployee" type="XML" />
    </content>
    </Page>
</mvc:View>
