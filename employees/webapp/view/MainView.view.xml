<mvc:View controllerName="logali.employees.controller.MainView"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m"
    xmlns:core="sap.ui.core">
    <Page id="page" title="{i18n>title}">
        <content /> <HBox id="_IDGenHBox1" >
            <Label labelFor="inputEmployee" id="labelEmployee" text="{i18n>labelEmployee}" class="sapUiSmallMargin" />
            <Input id="inputEmployee" value="{/EmployeeId}" maxLength="10" width="200px" class="sapUiSmallMarginEnd" />
            <Label labelFor="SlCountry" id="labelCountry" text="{i18n>labelCountry}" class="sapUiSmallMargin" visible="true"/>
            <Select id="slCountry" selectedKey="{/CountryKey}" forceSelection="false" items="{/ListCountry}" visible="true">
                <items>
                    <core:Item key="{Key}" text="{Text}" />
                </items>
            </Select>
            <Button id="btnFilter" text="{i18n>btnFilter}" icon="sap-icon://search" press="onFilter" class="sapUiSmallMarginEnd"/>
            <Button id="btnClearFilter" text="{i18n>btnFilter}" icon="sap-icon://clear-filter" press="onClearFilter" class="sapUiSmallMarginEnd"/>
        </HBox>
        <HBox >
            <Panel>
                <Table id="tableEmployee" items="{/Employees}">
                    <columns>
                        <Column >
                            <header>
                                <Label text="{i18n>tableId}"/>
                            </header>
                        </Column>
                        <Column >
                            <header>
                                <Label text="{i18n>tableName}"/>
                            </header>
                        </Column>
                        <Column >
                            <header>
                                <Label text="{i18n>tableCountry}"/>
                            </header>
                        </Column>
                        <Column >
                            <header>
                                <Label text="{i18n>tableCity}"/>
                            </header>
                        </Column>
                    </columns>
                    <items>
                        <ColumnListItem type="Active" press="showPostalCode">
                            <cells>
                                <Label text="{EmployeeID}" />
                                <Label text="{LastName}, {FirstName}" />
                                <Label text="{Country}" />
                                <Label text="{City}" />
                            </cells>
                        </ColumnListItem>
                    </items>
                </Table>
            </Panel>
        </HBox>
    </Page>
</mvc:View>
