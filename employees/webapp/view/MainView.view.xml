<mvc:View controllerName="logali.employees.controller.MainView"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m"
    xmlns:f="sap.f"
    xmlns:core="sap.ui.core">
   <Page showHeader="false">
    <content>
        <f:FlexibleColumnLayout id="fcl" backgroundDesign="Solid" layout="{jsonLayout>/ActiveKey}">
            <f:beginColumnPages>
                <mvc:XMLView id="masterEmployeeView" viewName="logali.employees.view.MasterEmployee" />
            </f:beginColumnPages>
            <f:midColumnPages>
                <mvc:XMLView id="detailEmployeeView" viewName="logali.employees.view.EmployeeDetails" />
            </f:midColumnPages>
            <f:endColumnPages>
                <Page />
            </f:endColumnPages>
        </f:FlexibleColumnLayout>
    </content>
    <footer>
        <Toolbar >
            <Label text="{i18n>layout}" class="sapUiSmallMargin"></Label>
            <Select items="{jsonLayout>/Layout}" selectedKey="{jsonLayout>/ActiveKey}">
                <core:Item key="{jsonLayout>Key}" text="{jsonLayout>Text}"></core:Item>
            </Select>
        </Toolbar>
    </footer>
</Page>

</mvc:View>
